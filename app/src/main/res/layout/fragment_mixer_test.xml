<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/fmt_card_player_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.3"
            >
            <TextView
                android:id="@+id/fmt_text_player_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fmt_player_list_name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fmt_recyclerview_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fmt_card_quick_add_player"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/fmt_card_player_list"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.3"
            >
            <TextView
                android:id="@+id/text_quick_add_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fmt_player_list_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/fmt_text_player_list_name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fmt_recyclerview_usages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_quick_add_player"
                app:layout_constraintLeft_toRightOf="@+id/fmt_text_player_list_name"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fmt_card_add_player"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/fmt_card_quick_add_player"
            app:layout_constraintLeft_toRightOf="@+id/fmt_card_player_list"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.6"
            >
            <TextView
                android:id="@+id/text_add_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fmt_player_list_name"
                />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
