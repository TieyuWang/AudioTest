<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">
    <data>
        <variable
            name="localPlayerInfo"
            type="com.yezi.audiotest.bean.LocalPlayerInfo" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/list_item_background"
        app:cardCornerRadius ="18dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            >
            <TextView
                android:id="@+id/player_base_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:text='@{localPlayerInfo.playerBaseInfo}'
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/player_audio_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:text='@{localPlayerInfo.audioFocusInfo}'
                app:layout_constraintTop_toBottomOf="@id/player_base_info"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/player_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:text='@{localPlayerInfo.playStateInfo}'
                android:textSize="20sp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/player_audio_focus"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageView
                android:id="@+id/player_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bar_selector_white"
                android:src="@drawable/ic_close_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/player_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bar_selector_white"
                android:src='@{localPlayerInfo.isPlaying?@drawable/ic_action_pause : @drawable/ic_action_play}'
                app:layout_constraintTop_toBottomOf="@+id/player_close"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
